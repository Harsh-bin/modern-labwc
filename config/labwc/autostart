# Desktop Login sound
aplay -q ~/.config/labwc/sound/desktop-login.wav >/dev/null 2>&1 &

# Device plugged audio
bash ~/.config/labwc/device-monitor.sh >/dev/null 2>&1 &

# Alarm Daemon
~/.config/waybar/scripts/clock_calendar/alarm/alarm.sh start-daemon

# Set background, prefer awww if available as it has better transitions 
if command -v awww >/dev/null 2>&1; then
	awww-daemon >/dev/null 2>&1 &
else
	swww-daemon >/dev/null 2>&1 &
fi

# Keyring
/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh >/dev/null 2>&1 &

# Polkit 
/usr/bin/lxqt-policykit-agent >/dev/null 2>&1 &

# Gtk Theme Refresh
bash ~/.config/labwc/gtk.sh >/dev/null 2>&1 &

# Clipboard
wl-clip-persist --clipboard regular &
wl-paste --type text --watch cliphist store &
wl-paste --type image --watch cliphist store &

# Waybar
(sleep 0.5; waybar --log-level off >/dev/null 2>&1 &)

# Notification 
# To use swaync replace dunst with swaync
dunst >/dev/null 2>&1 &

# Idle device manager
swayidle -w \
    timeout 300 "~/.config/labwc/idle/brightness_ctrl.sh --fade-out" \
    resume "~/.config/labwc/idle/brightness_ctrl.sh --fade-in" \
    timeout 600 "loginctl lock-session" \
    timeout 1800 "systemctl suspend" \
    lock "~/.config/labwc/idle/lock_ctrl.sh" \
    before-sleep "~/.config/labwc/idle/sleep_ctrl.sh" \
    after-resume "~/.config/labwc/idle/brightness_ctrl.sh --fade-in" \
    >/dev/null 2>&1 &

