/* --- matugen gtk4-colors.css --- */

@define-color accent_color {{colors.primary_fixed_dim.default.hex}};
@define-color accent_fg_color {{colors.on_primary_fixed.default.hex}};
@define-color accent_bg_color {{colors.primary_fixed_dim.default.hex}};
@define-color window_bg_color {{colors.surface.default.hex}};
@define-color window_fg_color {{colors.on_surface.default.hex}};
@define-color headerbar_bg_color @window_bg_color;
@define-color headerbar_fg_color @window_fg_color;
@define-color popover_bg_color @window_bg_color;
@define-color popover_fg_color @window_fg_color;
@define-color view_bg_color @window_bg_color;
@define-color view_fg_color @window_fg_color;
@define-color card_bg_color @window_bg_color;
@define-color card_fg_color @window_fg_color;
@define-color sidebar_bg_color @window_bg_color;
@define-color sidebar_fg_color @window_fg_color;
@define-color sidebar_backdrop_color @window_bg_color;
@define-color sidebar_border_color @border;
@define-color button {{colors.surface_container_highest.default.hex}};
@define-color border {{colors.primary_fixed_dim.default.hex}}80;
@define-color accent_hover_glass color-mix(in srgb, @accent_bg_color 15%, transparent);
@define-color accent_selected_glass color-mix(in srgb, @accent_bg_color 30%, transparent);


popover {
    background-color: transparent;
    border: none;
    box-shadow: none;
}

popover > contents,
popover > arrow {
    background-color: @window_bg_color;
    color: @window_fg_color;
    border: 1px solid @border;
}

window.dialog,
.message-dialog {
    background-color: @window_bg_color;
    color: @window_fg_color;
    border: 1px solid @border;
}

modelbutton,
window.dialog label,
.message-dialog label,
.message-dialog .title,
.message-dialog .body {
    color: @window_fg_color;
}

.navigation-sidebar > row:hover,
flowboxchild:hover,
gridview > child:hover,
listview > row:hover,
columnview > row:hover,
headerbar button:hover,        
modelbutton:hover,              
popover.menu button:hover {
    background-color: @accent_hover_glass;
}

headerbar windowcontrols button:hover {
    background-color: transparent;
    box-shadow: none;
}

.navigation-sidebar > row:selected,
flowboxchild:selected,
gridview > child:selected,
listview > row:selected,
columnview > row:selected,
button:checked,
button.toggle:checked {
    background-color: @accent_selected_glass;
    color: @window_fg_color;
}

window.dialog button,
.message-dialog button {
    background-color: @button;
    color: @window_fg_color;
    border: none;
}

window.dialog button:hover,
.message-dialog button:hover {
    background-color: @accent_hover_glass;
    color: @window_fg_color;
}

window.dialog button:active,
.message-dialog button:active {
    background-color: @accent_selected_glass;
    color: @window_fg_color;
}